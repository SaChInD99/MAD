<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightwhite"
    tools:context=".ChangeUserPassword">

    <include layout="@layout/userchangepassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightwhite"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Set New Password"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/blackcolor"
            android:textSize="36dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:textColor="@color/blackcolor"
            android:gravity="center"
            android:textStyle="bold"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/CHANGE_USER_PASSWORD"
            android:hint="Enter New Password"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15dp"
            android:background="@drawable/btn"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHANGE PASSWORD"
            android:textColor="@color/lightwhite"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/calculateexpense_btn"
            android:layout_margin="10dp"
            android:width="45dp"
            android:padding="15dp"
            android:id="@+id/CHANGE_USER_BTN"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Change_cancel"
            android:gravity="center"
            android:text="CANCEL"
            android:padding="5dp"
            android:textColor="@color/greycolor"
            android:textStyle="bold"/>




    </LinearLayout>




</LinearLayout>